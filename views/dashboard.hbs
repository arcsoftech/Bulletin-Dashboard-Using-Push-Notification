<div class="py-5">
    <div class="container">
        <div class="wrapper">
            <div class="row">
                <div class="col-sm-6"><h3 class="form-signin-heading">Bulletin Board</h3></div>
                <div class="col-sm-6 text-right"><a href="logout">Logout</a></div>
            </div>
            <hr class="colorgraph">
            {{#if Error.length }}
                <div class="alert alert-danger alert-dismissable fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Error!</strong>{{Error}}
                </div>
            {{/if}}
            {{#if message.length }}
                <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert">&times;</button>
                  {{ message }}
                </div>
            {{/if}}

            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <form id="signup" name="signup" method="post" action="pdf_form" enctype="multipart/form-data">
                        <h1 class="h3 mb-3 font-weight-normal">Change Bulletin PDF</h1>
                        <div class="form-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="validatedCustomFile" name="file" required>
                            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                          </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary" type="submit">Upload</button>
                        </div>
                    </form>
                </div>
                <div class="col-sm-6 col-xs-12 col-sm-offset-2">
                    <form id="signup" name="signup" method="post" action="push_message">
                        <h1 class="h3 mb-3 font-weight-normal">Push Message</h1>
                        <div class="form-group">
                            <textarea id="editor" class="form-control" name="message" rows="10" required placeholder="Enter message"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary" type="submit">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{#contentFor 'head' }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="css/style.css" rel="stylesheet" type="text/css">

    <script src="js/editor/ckeditor.js"></script>
    <script src="js/editor/sample.js"></script>
{{/contentFor}}
{{#contentFor 'pagescripts'}}
<script>
    initSample();

    $('#validatedCustomFile').on('change',function(){
        //get the file name
        var fileName = $(this).val();
        //replace the "Choose a file" label
        $(this).next('.custom-file-label').html(fileName);
    })
</script>

{{/contentFor}}
